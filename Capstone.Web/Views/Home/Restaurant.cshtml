@using Capstone.Web.Models;
@model List<PlacesModel>


@{
    ViewBag.Title = "Restaurant";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="restaurant-hero jumbotron">
    <div class="container text-center">
        <h1 class="h1 text-uppercase index-hero-text-shadow">Restaurants</h1>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-xs-12">

            @{foreach (var p in Model)
                {
                    if (p.Category == "Restaurant")
                    {
                        <p>@p.PlaceName</p>
                        <p>@p.StreetAddress</p>
                        <p>@p.City</p>
                        <p>@p.State</p>
                        <p>@p.Longitude</p>
                        <p>@p.Latitude</p>
                        <p>@p.Detail</p>
                        <p>@p.Category</p>
                    }

                }
            }
        </div>
    </div>
</div>