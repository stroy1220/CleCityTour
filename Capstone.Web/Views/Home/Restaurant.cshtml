@using Capstone.Web.Models;
@model List<PlacesModel>


@{
    ViewBag.Title = "Restaurant";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="restaurant-hero jumbotron">
    <div class="container text-center">
        <h1 class="h1 text-uppercase hero-text-drop-shadow">Restaurants</h1>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-xs-12">

            @{foreach (var p in Model)
                {
                    if (p.Category == "Restaurant")
                    {
                        <div class="col-xs-12 desc-bump">
                            <div class="col-md-4">
                                @*<img src="https://maps.googleapis.com/maps/api/staticmap?center=Brooklyn+Bridge,New+York,NY&zoom=13&size=600x300&maptype=roadmap"/>*@
                                <img class="img-responsive" src="~/Content/michael-symons-mabels-hero-.jpg" alt="" width="75%" height="auto">
                            </div>
                            <div class="col-md-8">
                                <h3>@p.PlaceName</h3>
                                <h4>@p.Detail</h4>
                                <p>@p.StreetAddress<br />@p.City, @p.State</p>
                            </div>
                            <hr />

                        </div>
                        @*<div class="clearfix"></div>*@
                    }

                }
            }
        </div>
    </div>

</div>