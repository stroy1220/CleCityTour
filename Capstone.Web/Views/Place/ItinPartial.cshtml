@using Capstone.Web.Models;
@model List<ItineraryPlacesModel>

@{ var counter = 1;}


<script src="https://cdn.rawgit.com/vast-engineering/jquery-popup-overlay/1.7.13/jquery.popupoverlay.js"></script>
<script type="text/javascript">
    window.onload = function () {
        loadMap();
    }
</script>
@if (Model.Count > 0)
{
    <h3 class="text-center intinPartHeader">Itinerary for @Model[0].Itinerary.Name</h3>

    foreach (var m in Model[0].Places)
    {
        <div class="col-sm-4">
            <div class="row itin-item">
                <div class="col-xs-12 col-sm-7">
                    <ul class="list-unstyled">
                        <li><h4>Stop @counter @m.PlaceName</h4></li>
                        <li><p>@m.StreetAddress<br />@m.City, @m.State @m.Zip</p></li>
                    </ul>
                </div>
            </div>
        </div>
        counter++;
    }
}
else
{
    <h2 class="text-center">You have not created an itinerary yet, Would you like to create one now?</h2>
        <button class="center-block btn-default btn-lg desc-bump my_popup_open">Create New Itinerary</button>
        <div id="my_popup">
            @Html.Action("CreateItinPartial", "Home")
        </div>
        <div class="wholePage">
        </div>
}
