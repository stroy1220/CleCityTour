@using Capstone.Web.Models;
@model List<PlacesModel>


@{
    ViewBag.Title = "Sports";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="sports-hero jumbotron">
    <div class="container text-center">
        <h1 class="h1 text-uppercase hero-text-drop-shadow">Sports</h1>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-xs-12">
            @{foreach (var p in Model)
                {
                    if (p.Category == "Sports")
                    {
                        <div class="col-xs-12 desc-bump">
                            <div class="col-md-4">
                                <img src="@Url.Content("~/Content/places-pics/" + p.PlaceName + ".jpg")" />
                            </div>
                            <div class="col-md-8 landmark-detail">
                                <h3>@p.PlaceName</h3>
                                <h4>@p.Detail</h4>
                                <p>@p.StreetAddress<br />@p.City, @p.State, @p.Zip</p>
                            </div>
                            <hr />
                        </div>
                        @*<div class="clearfix"></div>*@
                    }
                }
            }
        </div>
    </div>
</div>
@if (Session["user"] != null)
{
    <div>
        @Html.Action("ItinPartial")
    </div>
}